<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragment.expenseFragment"
    android:background="@color/white"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Expense All here"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/helveticalt"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday,Novermber 10"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_margin="15dp"
        android:fontFamily="@font/helveticalt"
        android:id="@+id/date"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Balance"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/helveticalt"
        android:id="@+id/addBalance"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="15dp"
        android:backgroundTint="#24C46D"
        android:id="@+id/addButton"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#333333"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Balance -"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/helveticalt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="58dp"
                    android:fontFamily="@font/helveticalt"
                    android:id="@+id/previousBalance"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TK"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:fontFamily="@font/helveticalt"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Last Transaction-"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/helveticalt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="32dp"
                    android:fontFamily="@font/helveticalt"
                    android:id="@+id/lastTransaction"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TK"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:fontFamily="@font/helveticalt"
                    />

            </LinearLayout>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:dividerColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Current Balance-"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/helveticalt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9500"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/helveticalt"
                    android:id="@+id/currentBalance"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TK"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:fontFamily="@font/helveticalt"

                    />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="#24C46D"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Add"
        android:textSize="20dp"
        android:fontFamily="@font/helveticalt"
        android:id="@+id/addExpense"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="#24C46D"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Status"
        android:textSize="20dp"
        android:fontFamily="@font/helveticalt"
        android:id="@+id/status"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/helveticalt"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler"
        />

</LinearLayout>



</FrameLayout>